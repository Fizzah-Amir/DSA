#include <iostream>
using namespace std;
int max_profit(int arr[], int s) {
	int min = arr[0];
	int max_profit = 0;
	for (int i = 0; i < s; i++) {
		if (arr[i] < min) {
			min = arr[i];
		}
		else {
			int profit = arr[i] - min;
			if (profit > max_profit) {
				max_profit = profit;
			}
		}
	}
	return max_profit;
}
int main() {
	int s;
	cout << "enter size and elements";
	cin >> s;
		int* arr = new int[s];
		cout <<"enter elements in the array";
		for (int i = 0; i < s; i++) {
			cin >> arr[i];
		}
		int l = max_profit(arr, s);
		cout << l;
}
